<h1 class="text-center display-5 font-weight-bold pt-3">Formulario de Proyectos</h1>
<div class="container py-5">
    <form action="/projects/create" method="get">
    <div class="form-group">
        <label for="name" class="display-6 font-weight-bold">Nombre proyecto</label>
        <input type="text" class="form-control" name="name_project" id="name_project" placeholder="Ingrese el nombre del proyecto">
    </div>

    <div class="form-group">
        <label for="description" class="display-6 font-weight-bold">Descripción</label>
        <textarea class="form-control" name="description" id="description" placeholder="Ingrese una descripción del proyecto"></textarea>
    </div>

    <div class="form-group">
        <label for="date_start" class="display-6 font-weight-bold">Fecha de inicio</label>
        <input type="date" class="form-control" name="date_start" id="date_start">
    </div>

    <div class="form-group">
        <label for="date_finish" class="display-6 font-weight-bold">Fecha de término</label>
        <input type="date" class="form-control" name="date_finish" id="date_finish">
    </div>

    <div class="form-group">
        <label for="state" class="display-6 font-weight-bold">Estado</label>
        <select class="form-control" id="state" name="state">
        <option value="propuesta">Propuesta</option>
        <option value="en_progreso">En progreso</option>
        <option value="terminado">Terminado</option>
        </select>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Guardar proyecto</button>
    </div>
    </form>
    <div class="text-right mt-2">
        <%= button_to "Volver", root_path, :id => "open-contacts-dialog-btn", :class => "btn btn-outline-success my-2 my-sm-0", :method => :get %>
    </div>
</div>